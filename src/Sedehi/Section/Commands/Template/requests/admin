	/**
	 * Get the validation rules that apply to the request.
	 *
	 * @return array
	 */
	public function rules()
        {
           $action = explode('@', $this->route()->getActionName());
           $action = end($action);
           switch ($action) {
               case 'destroy':
                   return [
                       'deleteId'   => 'required|array',
                   ];
                   break;
               case 'store':
                   return [
                       'name' => 'required',
                   ];
                   break;

               case 'update':
                   return [
                       'name' => 'required',
                   ];
                   break;
           }

           return [];
        }

}
